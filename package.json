{
  "name": "versakit-monorepo",
  "version": "0.3.10",
  "private": "true",
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "preinstall": "node ./scripts/preinstall.js",
    "commitlint": "commitlint --edit",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "lint:ui": "biome check packages/versakit-ui",
    "format:ui": "biome format --write packages/versakit-ui",
    "dev:ui": "pnpm --filter @versakit/ui dev",
    "build:ui": "pnpm --filter @versakit/ui build",
    "test:ui": "pnpm --filter @versakit/ui test",
    "docs:dev": "pnpm --filter @versakit/docs dev",
    "docs:build": "pnpm --filter @versakit/docs build",
    "docs:preview": "pnpm --filter @versakit/docs preview",
    "build:all": "pnpm build:ui && pnpm build:docs",
    "dev": "pnpm -r --parallel dev",
    "clean": "rimraf **/node_modules **/dist **/.turbo"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.9.0",
    "commitizen": "^4.3.1",
    "globals": "^15.12.0",
    "jsdom": "^25.0.1",
    "lefthook": "^1.11.13",
    "npm-run-all2": "^7.0.1",
    "rimraf": "^6.0.1",
    "typescript": "~5.6.3"
  }
}
