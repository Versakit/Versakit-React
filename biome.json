{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/.git/**",
			"**/coverage/**",
			"**/*.json",
			"**/tsconfig*.json"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"recommended": true
			},
			"correctness": {
				"recommended": true
			},
			"suspicious": {
				"recommended": true,
				"noExplicitAny": "error"
			},
			"style": {
				"recommended": true,
				"useImportType": "error",
				"useExportType": "error"
			},
			"nursery": {
				"recommended": true,
				"useConsistentMemberAccessibility": "error",
				"noStaticElementInteractions": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always"
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	}
}
